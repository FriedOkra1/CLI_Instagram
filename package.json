{
	"name": "cli-insta",
	"description": "Simple Instagram CLI",
	"version": "1.0.0",
	"license": "ISC",
	"author": "Ayush",
	"keywords": [
		"instagram",
		"cli",
		"terminal"
	],
	"bin": {
		"cli-insta": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"format": "prettier --write .",
		"build": "tsc",
		"clean": "rm -rf dist",
		"lint-check": "prettier --check . && xo",
		"prepare": "husky",
		"dev": "tsc --watch",
		"start": "node dist/cli.js",
		"test": "prettier --check . && xo && ava",
		"postinstall": "patch-package"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"debug": "^4.4.3",
		"emoji-name-map": "^2.0.3",
		"file-type": "^21.3.0",
		"fuse.js": "^7.1.0",
		"ink": "^6.6.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^4.0.0",
		"ink-picture": "^1.3.3",
		"ink-testing-library": "^4.0.0",
		"ink-text-input": "^6.0.0",
		"instagram_mqtt": "^1.2.3",
		"instagram-private-api": "^1.46.1",
		"js-yaml": "^4.1.0",
		"meow": "^14.0.0",
		"open": "^11.0.0",
		"pastel": "^4.0.0",
		"patch-package": "^8.0.1",
		"react": "^19.2.4",
		"read-package-up": "^12.0.0",
		"readline": "^1.3.0",
		"sharp": "^0.34.4",
		"unicode-emoji-json": "^0.8.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^8.1.0",
		"@types/debug": "^4.1.12",
		"@types/js-yaml": "^4.0.9",
		"@types/react": "^19.2.13",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.3.1",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.29.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.3",
		"xo": "^1.2.3"
	},
	"ava": {
		"files": [
			"tests/**"
		],
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"prettier": "@vdemedes/prettier-config",
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx,json,md}": "prettier --write",
		"**/*.{ts,tsx}": "xo --fix"
	}
}
